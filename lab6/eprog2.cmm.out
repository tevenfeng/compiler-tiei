int max(int x, int y) {
    if ((x(int) + y(int))) {
        return x(int);
    }
    else {
        return y(int);
    }
}

void main() {
    int a;
    bool b;
    int m;
    cout << "a: ";
    cin >> a(int);
    cout << "b: ";
    cin >> b(bool);
    m(int) = max(int,int->int)(a(int), b(bool));
    cout << "the maximum is ";
    cout << m(int);
}

